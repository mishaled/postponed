{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022"],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./"
    },
    "include": ["src/**/*.*"],
    "exclude": ["build", ".history", "node_modules"],
    "compileOnSave": true
}
